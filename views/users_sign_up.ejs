<html>
    <head>

        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <div>
            <form action="/users/create" method="POST">     
<!-- here in action /users/create is new variable and create is used in user_controllers page to render this form -->

                <div>
                    <label for="name">Name</label>
                    <input type="name" name="name" placeholder="Your name" required>
                </div>
                <div>
                    <label for="email">E-mail</label>
                    <input type="email" name="email" placeholder="abc@example.com" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="Atleast 8 Character" required>
                </div>
                <div>
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" name="confirm_password" placeholder="confirm_password" required>
                </div>
                <div>
                    <input type="submit" value="Sign-Up">
                </div>
            </form>
        </div>
    </body>
</html> 